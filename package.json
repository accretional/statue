	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/semihpolat/statue-ssg.git"
	},
	"bugs": {
		"url": "https://github.com/semihpolat/statue-ssg/issues"
	},
	"homepage": "https://github.com/semihpolat/statue-ssg#readme"
