{
	"name": "statue",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "npm run build:cms && vite build",
		"build:cms": "node src/lib/cms/build.mjs",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/vite": "^4.0.15",
		"@types/node": "^22.13.13",
		"autoprefixer": "^10.4.21",
		"gray-matter": "^4.0.3",
		"marked": "^15.0.7",
		"postcss": "^8.5.3",
		"remark": "^15.0.1",
		"remark-html": "^16.0.1",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.15",
		"ts-node": "^10.9.2",
		"typescript": "^5.0.0",
		"vite": "^6.0.0"
	}
}
