{
	"name": "statue-ssg",
	"version": "0.1.2",
	"description": "Statue: Svelte Static Site Generator with CMS features, launch your SaaS website in seconds",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"statue-ssg": "bin/cli.js"
	},
	"files": [
		"dist",
		"bin",
		"template",
		"postinstall.js",
		"LICENSE",
		"README.md"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepublishOnly": "npm run package && npm run package:cli && npm run prepare:template",
		"package": "rimraf dist && node scripts/build-package.js",
		"package:cli": "node scripts/build-cli.js",
		"prepare:template": "node scripts/prepare-template.js",
		"postinstall": "node postinstall.js"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/node": "^22.13.13",
		"autoprefixer": "^10.4.21",
		"chalk": "^5.4.1",
		"commander": "^13.1.0",
		"esbuild": "^0.20.2",
		"fs-extra": "^11.3.0",
		"gray-matter": "^4.0.3",
		"marked": "^15.0.7",
		"postcss": "^8.5.3",
		"rimraf": "^5.0.10",
		"svelte": "^4.2.7",
		"tailwindcss": "^4.0.15",
		"typescript": "^5.0.0",
		"vite": "^6.0.0"
	},
	"dependencies": {
		"gray-matter": "^4.0.3",
		"marked": "^15.0.7"
	},
	"peerDependencies": {
		"commander": "^13.0.0",
		"chalk": "^5.0.0",
		"fs-extra": "^11.0.0"
	},
	"keywords": [
		"static-site-generator",
		"markdown",
		"ssg",
		"sveltekit",
		"static-site",
		"content-management"
